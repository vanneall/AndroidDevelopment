<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/fragment_counter"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:name="com.example.task8_1.CounterFragment"
        tools:layout="@layout/fragment_counter" />

    <fragment
        android:id="@+id/fragment_display"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:name="com.example.task8_1.DisplayCounterFragment"
        tools:layout="@layout/fragment_display_counter" />


</LinearLayout>